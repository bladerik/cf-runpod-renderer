{
    "include": ["./src/**/*"],
    "exclude": ["./src/node_modules/**/*"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "removeComments": false
    }
}
